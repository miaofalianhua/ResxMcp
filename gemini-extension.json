{
  "name": "resxmcp",
  "display_name": "ResxMcp",
  "description": "Lightweight MCP server for managing .resx localization files—works with any MCP-compatible client (Gemini CLI, Claude Desktop, Cursor).",
  "version": "1.0.1",
  "license": "MIT",
  "author": {
    "name": "Bin (斌哥)",
    "github": "miaofalianhua"
  },
  "repository": "https://github.com/miaofalianhua/ResxMcp",
  "homepage": "https://github.com/miaofalianhua/ResxMcp",
  "tags": [
    "mcp",
    "model-context-protocol",
    "localization",
    "i18n",
    "l10n",
    "resx",
    "dotnet",
    "csharp",
    "cli",
    "ai-tool",
    "gemini-cli",
    "json-rpc",
    "stdio"
  ],
  "categories": [ "Developer Tools", "Localization" ],
  "requires": [ "windows", "dotnet-8", "powershell-5+" ],

  "entrypoint": "scripts/run-resxmcp.ps1",

  "mcp": {
    "servers": {
      "resx-tool": {
        "type": "process",
        "command": "powershell",
        "args": [
          "-NoLogo",
          "-NoProfile",
          "-ExecutionPolicy",
          "Bypass",
          "-File",
          "scripts/run-resxmcp.ps1"
        ],
        "workingDirectory": ".",
        "env": {}
      }
    }
  },

  "tools": {
    "resx-install-info": {
      "description": "Check ResxMcp installation path and version",
      "parameters": {},
      "command": [ "echo", "ResxMcp server successfully installed and running." ]
    }
  }
}
